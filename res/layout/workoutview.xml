<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pulldown_bg_iphone" >

    <ImageView
        android:id="@+id/greenwayMarkerImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/grey_marker" />

    <TextView
        android:id="@+id/greenwayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/greenwayMarkerImage"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="3dp"
        android:text="No greenway found" />

    <Chronometer
        android:id="@+id/workoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/greenwayMarkerImage"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/greenwayText"
        android:textColor="#006400"
        android:textSize="25dp" />
    
    <!-- TextView
        android:id="@+id/workoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/greenwayMarkerImage"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/greenwayText"
        android:textColor="#006400"
        android:textSize="25dp"
        android:text="00:00" /-->

    <TextView
        android:id="@+id/workoutDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/greenwayMarkerImage"
        android:layout_alignLeft="@+id/workoutTime"
        android:layout_marginTop="10dp"
        android:textColor="#006400"
        android:text="0.00 miles" />

    <Button
        android:id="@+id/workoutStart"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/greenwayText"
        android:layout_below="@+id/greenwayText"
        android:layout_marginRight="1dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/green_button"
        android:textColor="#FFFFFF"
        android:text="Start" />

    <Button
        android:id="@+id/workoutStop"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/greenwayText"
        android:layout_toRightOf="@+id/workoutStart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/red_button"
        android:textColor="#FFFFFF"
        android:text="Stop" />

</RelativeLayout>