<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pulldown_bg_iphone" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/seeclickfix" />

    <TextView
        android:id="@+id/greenwayIssueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView1"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/greenwayIssueLabel"
        android:textColor="#006400" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_below="@+id/greenwayIssueTextView"
        android:layout_centerHorizontal="true"
    	android:padding="2dp"
    	android:layout_marginTop="10dp"
    	android:background="@drawable/edittext"
    	android:hint=" Enter an issue"
    	android:textSize="14dp" >
        <!-- requestFocus /-->
    </EditText>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_button"
        android:textColor="#FFFFFF"
        android:text="@string/submitLabel" />

    <TextView
        android:id="@+id/greenwayErrorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/greenwayErrorLabel"
        android:textColor="#006400"
        android:textSize="11dp"
        android:textStyle="bold" />

</RelativeLayout>